<!-- Exemple de vin -->
<div class="list-box card mt-4 wine-item" id="{{ winesListElem.id }}" data-name="{{ winesListElem.domaine_name}}" data-appellation="{{ winesListElem.appellation}}" data-region="{{ winesListElem.region}}" data-type="{{ winesListElem.wine_type }}">
    <div class="p-4 card-body">
        <div class="align-items-center row">
            <div class="col-auto">
                <div class="list-images">
                    <img src="https://devbox.u-angers.fr/~thibaultgicquel6201/img/wines/{{ winesListElem.path_img}}" alt="Bouteille de vin" class="avatar-md img-thumbnail rounded-circle" />
                </div>
            </div>
            <div class="col-lg-5">
                <div class="list-content mt-3 mt-lg-0">
                    <h5 class="fs-19 mb-0">
                        {{ winesListElem.domaine_name}}
                    </h5>
                    <p class="text-muted mb-2">Appellation : {{ winesListElem.appellation}}</p>
                    <ul class="list-inline mb-0 text-muted">
                        <li class="list-inline-item"><i class="mdi mdi-map-marker"></i> {{ winesListElem.region}}, {{ winesListElem.country_of_origin}}</li>
                        <li class="list-inline-item"><i class="mdi mdi-calendar"></i> Millésime : {{ winesListElem.vintage}}</li>

                        {% if winesListElem.grape_varieties %}
                            <li class="list-inline-item"><i class="mdi mdi-grape"></i> Cépages : {{ winesListElem.grape_varieties }}</li>
                        {% endif %}
                    </ul>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="mt-2 mt-lg-0 d-flex flex-wrap align-items-start gap-1">

                        {% if winesListElem.wine_type %}
                            <span class="badge bg-soft-secondary fs-14 mt-1">{{ winesListElem.wine_type }}</span>
                        {% endif %}


                    
                        {% if winesListElem.classification %}
                            <span class="badge bg-soft-secondary fs-14 mt-1">{{ winesListElem.classification }}</span>
                        {% endif %}

                        {% if winesListElem.alcohol_content %}
                            <span class="badge bg-soft-secondary fs-14 mt-1">{{ winesListElem.alcohol_content }}% Vol</span>
                        {% endif %}

                        {% if winesListElem.bottle_size %}
                            <span class="badge bg-soft-secondary fs-14 mt-1">{{ winesListElem.bottle_size }}</span>
                        {% endif %}

                        {% if winesListElem.serving_temperature %}
                            <span class="badge bg-soft-secondary fs-14 mt-1">Température de service : {{ winesListElem.serving_temperature }}</span>
                        {% endif %}

                        {% if winesListElem.aging_potential %}
                            <span class="badge bg-soft-secondary fs-14 mt-1">Durée de garde : {{ winesListElem.aging_potential }}</span>
                        {% endif %}

                        {% if winesListElem.certifications %}
                            <span class="badge bg-soft-secondary fs-14 mt-1">{{ winesListElem.certifications }}</span>
                        {% endif %}

                                            
                </div>
            </div>


            {% if user.status == "manager"%}

            <div class="col-auto">
                <button class="btn btn-warning edit-wine-button" onclick="OpenModalModif('{{ winesListElem.id }}')" > 
                    Modifier</button>
            </div>

            <div class="col-auto">
                <button class="btn btn-danger" type="button" onclick="confirmDelete('{{ winesListElem.id }}')">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                        <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
                    </svg>
                </button>
            </div>



            <!-- Modale pour modifier un vin -->
            <div class="modal fade" id="editWineModal" tabindex="-1" aria-labelledby="editWineModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editWineModalLabel">Modifier le vin</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="editWineForm">
                                <div class="mb-3">
                                    <label for="domaine_name" class="form-label">Domaine</label>
                                    <input type="text" class="form-control" id="domaine_name" name="domaine_name" value="{{ winesListElem.domaine_name}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="appellation" class="form-label">Appellation</label>
                                    <input type="text" class="form-control" id="appellation" name="appellation" value="{{ winesListElem.appellation}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="region" class="form-label">Région</label>
                                    <input type="text" class="form-control" id="region" name="region" value="{{ winesListElem.region}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="country_of_origin" class="form-label">Pays d'origine</label>
                                    <input type="text" class="form-control" id="country_of_origin" name="country_of_origin" value="{{ winesListElem.country_of_origin}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="grape_varieties" class="form-label">Cépages</label>
                                    <input type="text" class="form-control" id="grape_varieties" name="grape_varieties" value="{{ winesListElem.grape_varieties}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="wine_type" class="form-label">Type de vin</label>
                                    <input type="text" class="form-control" id="wine_type" name="wine_type" value="{{ winesListElem.wine_type}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="vintage" class="form-label">Millésime</label>
                                    <input type="number" class="form-control" id="vintage" name="vintage" value="{{ winesListElem.vintage}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="alcohol_content" class="form-label">Taux d'alcool</label>
                                    <input type="number" step="0.1" class="form-control" id="alcohol_content" name="alcohol_content" value="{{ winesListElem.alcohol_content}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="classification" class="form-label">Classification</label>
                                    <input type="text" class="form-control" id="classification" name="classification" value="{{ winesListElem.classification}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="certifications" class="form-label">Certifications</label>
                                    <input type="text" class="form-control" id="certifications" name="certifications" value="{{ winesListElem.certifications}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="bottle_size" class="form-label">Taille de la bouteille</label>
                                    <input type="text" class="form-control" id="bottle_size" name="bottle_size" value="{{ winesListElem.bottle_size}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="cork_type" class="form-label">Type de bouchon</label>
                                    <input type="text" class="form-control" id="cork_type" name="cork_type" value="{{ winesListElem.cork_type}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="serving_temperature" class="form-label">Température de service</label>
                                    <input type="text" class="form-control" id="serving_temperature" name="serving_temperature" value="{{ winesListElem.serving_temperature}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="aging_potential" class="form-label">Potentiel de garde</label>
                                    <input type="text" class="form-control" id="aging_potential" name="aging_potential" value="{{ winesListElem.aging_potential}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="path_img" class="form-label" >Image</label>
                                    <p>Fichier actuel : <span id="current-file">{{ winesListElem.path_img}}</span></p>
                                    <input type="file" class="form-control" id="path_img" name="path_img" accept="image/png, image/jpeg">
                                </div>
                                <input type="hidden" id="wine_id" name="wine_id">
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                            <button type="button" class="btn btn-primary" id="saveChangesButton" onclick="ModifWine({{ winesListElem.id }})">Enregistrer</button>
                        </div>
                    </div>
                </div>
            </div>

            <script>
            function confirmDelete(wineId) {
                Swal.fire({
                    title: 'Êtes-vous sûr ?',
                    text: "Cette action est irréversible !",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Oui, supprimer',
                    cancelButtonText: 'Annuler'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Si confirmé, effectuer la suppression
                        suprWine(wineId);
                    }
                });
            }

            function suprWine(wineId) {
                console.log(wineId);
                const data = { id: wineId };
                fetch('https://devbox.u-angers.fr/~thibaultgicquel6201/include/suprWine.php', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                .then(response => response.json()) 
                .then(data => {
                    if (data.message) {
                        console.log('Suppression réussie:', data.message);
                        // Recharger la page après suppression
                        reloadPage();
                    } else {
                        console.error('Erreur:', data.error || 'Action échouée');
                    }
                })
                .catch(error => console.error('Erreur:', error));
            }

            function reloadPage() {
                location.reload();
            }

            function OpenModalModif(){
                $('#editWineModal').modal('show');
            }

            function ModifWine(wineId){
                console.log(wineId);

                // Récupérer l'élément input de type fichier
                const fileInput = document.getElementById("path_img");

                // Récupérer le chemin de l'image actuelle
                const currentImage = document.getElementById("current-file").textContent;

                // Créer un objet FormData pour envoyer les données du formulaire
                const formData = new FormData();

                // Ajouter les champs du formulaire à FormData
                formData.append("id", wineId);
                formData.append("domaine_name", document.getElementById("domaine_name").value);
                formData.append("appellation", document.getElementById("appellation").value);
                formData.append("region", document.getElementById("region").value);
                formData.append("country_of_origin", document.getElementById("country_of_origin").value);
                formData.append("grape_varieties", document.getElementById("grape_varieties").value);
                formData.append("wine_type", document.getElementById("wine_type").value);
                formData.append("vintage", document.getElementById("vintage").value);
                formData.append("alcohol_content", document.getElementById("alcohol_content").value);
                formData.append("classification", document.getElementById("classification").value);
                formData.append("certifications", document.getElementById("certifications").value);
                formData.append("bottle_size", document.getElementById("bottle_size").value);
                formData.append("cork_type", document.getElementById("cork_type").value);
                formData.append("serving_temperature", document.getElementById("serving_temperature").value);
                formData.append("aging_potential", document.getElementById("aging_potential").value);

                // Gérer l'image
                if (fileInput.files.length > 0) {
                    // Si un nouveau fichier est sélectionné, l'ajouter à FormData
                    formData.append("path_img", fileInput.files[0]);
                } else {
                    // Sinon, utiliser l'image actuelle
                    formData.append("path_img", currentImage);
                }

                // Envoyer les données au serveur
                fetch('https://devbox.u-angers.fr/~thibaultgicquel6201/include/modifWine.php', {
                    method: 'POST',
                    body: formData // Utiliser FormData pour envoyer les données
                })
                .then(response => response.json())
                .then(data => {
                    console.log('Réponse du serveur:', data);
                    $('#editWineModal').modal('hide'); // Fermer la modale après la réponse
                })
                .catch(error => console.error('Erreur:', error));
            }
            

            </script>



            {% endif %}
        </div>
    </div>
</div>


<!-- Fin Exemple de vin -->